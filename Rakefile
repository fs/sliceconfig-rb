require 'rubygems'
require 'bundler'
require 'bundler/setup'
require 'rake'
require 'jeweler'

require File.join(File.dirname(__FILE__),'lib', 'sliceconfig', 'version.rb')

Jeweler::Tasks.new do |gem|
  gem.name = 'sliceconfig-rb'
  gem.summary = %q{Setup sliceconfig chef recipes}
  gem.description = %q{Setup sliceconfig chef recipes}
  gem.email = 'timur.vafin@flatsoft.com'
  gem.homepage = 'http://github.com/fs/sliceconfig-rb'
  gem.authors = ['Timur Vafin']
  gem.version = Sliceconfig::VERSION::STRING
  gem.add_bundler_dependencies
end
